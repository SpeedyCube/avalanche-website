{
  "name": "@avalanche/website",
  "description": "Website generator for the avalanche framework",
  "keywords": [
    "avalanche"
  ],
  "version": "0.0.1",
  "author": "Markus Oberlehner",
  "homepage": "https://avalanche.oberlehner.net",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/avalanchesass/avalanche-website"
  },
  "bugs": {
    "url": "https://github.com/avalanchesass/avalanche-website/issues"
  },
  "devDependencies": {
    "@avalanche/object-grid": "^4.0.0-alpha.3",
    "autoprefixer": "^6.5.3",
    "clean-css": "^3.4.21",
    "eslint": "^3.10.2",
    "eslint-config-modularis": "^4.0.0",
    "eslint-plugin-import": "^2.2.0",
    "glob": "^7.1.1",
    "handlebars": "^4.0.6",
    "highlight.js": "^9.8.0",
    "htmlclean": "^2.7.7",
    "marked": "^0.3.6",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.13.0",
    "node-sass-magic-importer": "^2.1.3",
    "postcss": "^5.2.5",
    "postcss-scss": "^0.4.0",
    "sassdoc": "^2.1.20",
    "sassdoc-theme-flippant": "^0.1.0",
    "static-http2-server": "^1.5.3",
    "stylelint": "^7.6.0",
    "stylelint-config-modularis": "^2.0.1",
    "uncss": "^0.14.1"
  },
  "scripts": {
    "init": "git clone -b dev https://github.com/avalanchesass/avalanche.git && yarn && http2-server --generate-cert",
    "start": "yarn run build && http2-server dist -o -g -P",
    "build": "rm -Rf dist && node scripts/build.js && yarn run doc",
    "build-production": "rm -Rf dist && node scripts/build.js --minify && yarn run doc",
    "doc": "cd avalanche && sassdoc packages/*/scss/*.scss --dest ../dist/documentation --theme flippant",
    "lint": "stylelint 'resources/**/*.scss' && eslint scripts"
  }
}

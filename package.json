{
  "name": "@avalanche/website",
  "description": "Website generator for the avalanche framework",
  "keywords": [
    "avalanche"
  ],
  "version": "0.0.1",
  "author": "Markus Oberlehner",
  "homepage": "https://avalanche.oberlehner.net",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/avalanchesass/avalanche-website"
  },
  "bugs": {
    "url": "https://github.com/avalanchesass/avalanche-website/issues"
  },
  "dependencies": {
    "@avalanche/component-button": "^4.0.0-alpha.2",
    "@avalanche/generic-box-sizing-reset": "^4.0.0-alpha.2",
    "@avalanche/object-container": "^4.0.0-alpha.3",
    "@avalanche/object-grid": "^4.0.0-alpha.7",
    "@avalanche/object-island": "^4.0.0-alpha.1",
    "@avalanche/object-vertical-spacing": "^4.0.0-alpha.1",
    "@avalanche/setting-breakpoints": "^4.0.0-alpha.2",
    "@avalanche/setting-spacings": "^4.0.0-alpha.1",
    "@avalanche/utility-text-align": "^4.0.0-alpha.1",
    "@avalanche/utility-visibility": "^4.0.0-alpha.1",
    "@avalanche/utility-width": "^4.0.0-alpha.3",
    "normalize-scss": "^6.0.0",
    "reset-css": "^2.2.0"
  },
  "devDependencies": {
    "@avalanche/eslint-config": "^0.1.0",
    "@avalanche/stylelint-config": "^0.1.0",
    "autoprefixer": "^6.7.7",
    "clean-css": "^4.0.12",
    "eslint": "^3.19.0",
    "eslint-plugin-import": "^2.2.0",
    "glob": "^7.1.1",
    "handlebars": "^4.0.6",
    "highlight.js": "^9.11.0",
    "htmlclean": "^3.0.2",
    "lighthouse": "^1.6.5",
    "marked": "^0.3.6",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.2",
    "node-sass-magic-importer": "^4.1.4",
    "postcss": "^5.2.17",
    "postcss-scss": "^0.4.1",
    "sassdoc": "^2.2.2",
    "sassdoc-theme-flippant": "^0.1.0",
    "static-http2-server": "^1.5.6",
    "stylelint": "^7.10.1",
    "sw-precache": "^5.1.0",
    "uncss": "^0.14.1"
  },
  "scripts": {
    "init": "git clone -b dev https://github.com/avalanchesass/avalanche.git && yarn && http2-server --generate-cert",
    "start": "yarn run build && http2-server dist -o -g -P",
    "build": "yarn run clean && node scripts/build.js && yarn run doc && cp -R resources/images dist && mv dist/images/favicon.ico dist && yarn run copy-examples && sw-precache --root=dist",
    "build:production": "yarn run clean && node scripts/build.js --minify && yarn run doc && cp -R resources/images dist && mv dist/images/favicon.ico dist && yarn run copy-examples && sw-precache --root=dist",
    "copy-examples": "cp -R examples/* dist/examples && rm -Rf dist/examples/*/scss",
    "doc": "cd avalanche && sassdoc packages/*/scss/*.scss --dest ../dist/documentation --theme flippant",
    "clean": "rm -Rf dist",
    "lint": "stylelint '+(examples|resources)/**/*.scss' && eslint scripts",
    "lighthouse": "lighthouse https://127.0.0.1:4443/",
    "publish": "yarn run build:production && rsync -avz --delete --exclude=/.* --exclude=/error --exclude=/robots.txt --exclude=/stats --exclude=/v3 -e ssh dist/ vs0.oberlehner.net:/var/www/avalanche.oberlehner.net/web"
  }
}

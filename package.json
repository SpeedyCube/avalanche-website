{
  "name": "avalanchesass-website",
  "description": "Website generator for the avalanche framework",
  "keywords": [
    "avalanchesass"
  ],
  "version": "0.0.1",
  "author": "Markus Oberlehner",
  "homepage": "https://avalanche.oberlehner.net",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/avalanchesass/avalanche-website"
  },
  "bugs": {
    "url": "https://github.com/avalanchesass/avalanche-website/issues"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "chokidar-cli": "^1.2.0",
    "clean-css": "^3.4.20",
    "eslint": "^3.7.1",
    "eslint-config-modularis": "^2.0.0",
    "eslint-plugin-import": "^2.0.0",
    "glob": "^7.1.1",
    "handlebars": "^4.0.5",
    "highlight.js": "^9.7.0",
    "htmlclean": "^2.7.7",
    "http-server": "^0.9.0",
    "marked": "^0.3.6",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.10.1",
    "node-sass-magic-importer": "^1.1.0",
    "postcss": "^5.2.4",
    "postcss-scss": "^0.3.1",
    "stylelint": "^7.5.0",
    "stylelint-config-modularis": "^1.0.0",
    "uncss": "^0.14.1"
  },
  "scripts": {
    "build": "sh scripts/build.sh",
    "build-production": "npm run build && npm run minify && npm run pack",
    "minify": "node scripts/minify-css.js",
    "pack": "node scripts/pack.js",
    "start": "npm run build && http-server dist -o",
    "watch": "npm run start && chokidar 'avalanche/packages/**/*' -c 'npm run build'",
    "lint": "stylelint 'resources/**/*.scss'"
  }
}
